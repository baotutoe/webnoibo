doctype html
html(lang="en")
  head
    // Required meta tags
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description" content="Colorlib Templates")
    meta(name="author" content="Colorlib")
    meta(name="keywords" content="Colorlib Templates")
    // Title Page
    title Nhập Thông Tin
    // Font special for pages
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet")
    // Main CSS
    link(href="css/maindkyc.css" rel="stylesheet" media="all")
  body
    .page-wrapper.bg-dark.p-t-100.p-b-50
      .wrapper.wrapper--w900
        .card.card-6
          .card-heading
            h2.title THÔNG TIN
          .card-body
            form(name='frmdkyc' action='/dangkyyeucau' method="POST" )
              .form-row
                .name Tiêu Đề
                .value
                  input.input--style-6(type="text" name="tieude" placeholder="Tiêu đề bài viết")
              .form-row
                .name Ghi chú
                .value
                  .input-group
                    input.input--style-6(type="text" name="ghichu" placeholder="Thông tin chú ý")
              .form-row
                .name Nội dung
                .value
                  .input-group
                    textarea.textarea--style-6(type="text" name="noidung" placeholder="Nội dung bài viết")
              .form-row
                .name Ảnh
                .value
                  .input-group.js-input-file
                    input#file.input-file(type="file" name="file_cv")
                    label.label--file(for="file") Choose picture
                    span.input-file__info No file picture
                  .label--desc  Max file size 50 MB
              .card-footer
                button.btn.btn--radius-2.btn--blue-2(type="submit") Send 
    // Jquery JS
    script(src="vendor/jquery/jquery.min.js")
    // Main JS
    script(src="js/global.js")
